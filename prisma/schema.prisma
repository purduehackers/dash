generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model UserRoles {
    roleId          Int         @id @unique @default(autoincrement())
    @@map(name: "userRoles")
}

model UserProfile {
    userId          Int         @id @unique @default(autoincrement())
    discordId       BigInt

    name            String
    surname         String
    email           String      @unique
    roleId          Int         

    badges          Badge[]
    sound           Bytes    
    level           Int    

    @@map(name: "userProfiles")
}

model Badge {
    badgeId         Int         @id @unique
    name            String
    description     String
    users           UserProfile[]

    @@map(name: "badges")
}